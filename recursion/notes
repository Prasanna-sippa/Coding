Recursion:
1.
#include <iostream>

using namespace std;


void func(int n){
    if(n==0 || n==1) return ; 
    // cout<<"before"<<endl;
    // cout<<n<<endl;

    func(n-1);
    cout<<"after"<<endl;
    cout<<n<<endl;

}
int main()
{
    func(5);
}

o/p:::
after
2
after
3
after
4
after
5

2.#include <iostream>

using namespace std;


void func(int n){
    if(n==0 || n==1) return ; 
    cout<<"before"<<endl;
    cout<<n<<endl;

    func(n-1);
    // cout<<"after"<<endl;
    // cout<<n<<endl;

}
int main()
{
    func(5);
}

